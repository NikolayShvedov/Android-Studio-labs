<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".notification_pages.DeleteNotificationActivity">

<Button
    android:text="Удалить напоминание"
    android:layout_width="380dp"
    android:layout_height="60dp" android:id="@+id/button14"
    android:onClick="deleteNotification"
    app:layout_constraintTop_toBottomOf="@+id/listNotifications" android:layout_marginBottom="24dp"
    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
<EditText
    android:layout_width="0dp"
    android:layout_height="42dp"
    android:inputType="textPersonName"
    android:ems="10"
    android:id="@+id/IDforDelete"
    android:layout_marginBottom="17dp"
    app:layout_constraintBottom_toTopOf="@+id/button14" app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
    app:layout_constraintEnd_toEndOf="parent"/>
<TextView
    android:layout_width="0dp"
    android:layout_height="0dp" android:id="@+id/listNotifications"
    android:scrollbars="vertical"
    android:layout_marginBottom="116dp" app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/button14" app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>
<TextView
    android:text="Id уведомления для удаления:"
    android:layout_width="262dp"
    android:layout_height="28dp" android:id="@+id/textView12"
    android:layout_marginTop="20dp"
    app:layout_constraintTop_toBottomOf="@+id/listNotifications" android:layout_marginBottom="9dp"
    app:layout_constraintBottom_toTopOf="@+id/IDforDelete" app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="14dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>